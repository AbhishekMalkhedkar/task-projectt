<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Task Manager</title>
  <link rel="stylesheet" href="/styles/main.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css">
  
</head>

<body>
  <div class="container">
    <header class="header">
      <h1><i class="fas fa-tasks"></i> Task Manager</h1>
      <a id="newPostBtn" href="/new" class="btn">+ New Task</a>
    </header>

    <ul id="postsList" class="task-list">
      <% tasks.forEach(task => { %>
        <li class="task-item">
          <div class="task-card">
            <div class="task-header">
              <h2 class="task-title"><%= task.title %></h2>
              <div class="task-actions">
                <a class="edit" href="/edit/<%= task._id %>" title="Edit Task"><i class="fas fa-edit"></i></a>
                <a class="delete" href="/delete/<%= task._id %>" title="Delete Task" onclick="return confirmDelete()"><i class="fas fa-trash"></i></a>
              </div>
            </div>

            <p class="task-desc"><%= task.description %></p>

            <!-- Conditional status color class -->
            <p class="task-status">Status:
              <strong class="<%= task.status === 'pending' ? 'status-pending' : task.status === 'in-progress' ? 'status-in-progress' : 'status-completed' %>">
                <%= task.status %>
              </strong>
            </p>

            <small class="task-date"><i class="fas fa-calendar-alt"></i> Due Date: <%= task.dueDate %></small>
          </div>
        </li>
      <% }); %>
    </ul>
  </div>

  <script>
    function confirmDelete() {
      return confirm('Are you sure you want to delete this task?');
    }
  </script>
</body>

</html>